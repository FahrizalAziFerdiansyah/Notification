<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    style="@style/viewParent.headerText.NoMode"
                    android:textColor="@color/whiteTextColor"

                    android:text="Pantau \nProses\nBelajar \nAnak! "/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_login_hero"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputName"
                        style="@style/parent2"
                        android:layout_marginTop="@dimen/loginViewsMargin">
                        <EditText
                            android:id="@+id/nisn"
                            style="@style/modifiedEditText2"
                            android:inputType="textPersonName"
                            android:textSize="17dp"
                            android:maxLines="1"
                            android:hint="NISN"/>
                    </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/cek"
                            style="@style/loginButton"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Cek"
                            android:textAlignment="center" />
                    </LinearLayout>
                    <ProgressBar
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/loading_spinner"
                        android:layout_below="@+id/cek"
                        android:layout_alignRight="@+id/nisn"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignEnd="@+id/textView"
                        android:layout_alignLeft="@+id/textview"
                        android:layout_alignStart="@+id/textview"
                        android:layout_alignParentBottom="true" />
                    <LinearLayout
                        android:id="@+id/data"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/data_siswa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="10dp">

                                <TextView
                                    android:gravity="center"
                                    android:textSize="17dp"
                                    android:id="@+id/txt_judul"
                                    android:text="Data Peserta Didik"
                                    android:textStyle="bold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <View
                                    android:layout_margin="10dp"
                                    android:background="#f0f0f0"
                                    android:id="@+id/v1"
                                    android:layout_below="@id/txt_judul"
                                    android:layout_width="wrap_content"
                                    android:layout_height="1dp"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_below="@id/v1"
                                    android:id="@+id/txt_nisn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NISN : " />
                                <TextView
                                    android:layout_toRightOf="@id/txt_nisn"
                                    android:layout_below="@id/v1"
                                    android:id="@+id/nomor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="NISN" />

                                <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/txt_nama"
                                    android:layout_below="@id/nomor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama Siswa :" />

                                <TextView
                                    android:layout_toRightOf="@id/txt_nama"
                                    android:id="@+id/nama"
                                    android:layout_below="@id/nomor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama Siswa" />

                                <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/txt_ttl"
                                    android:layout_below="@id/nama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tempat / Tanggal Lahir :" />

                                <TextView
                                    android:layout_toRightOf="@id/txt_ttl"
                                    android:id="@+id/ttl"
                                    android:layout_below="@id/nama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tempat / Tanggal Lahir" />

                                <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/txt_alamat"
                                    android:layout_below="@id/ttl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat :" />
                                <TextView
                                    android:layout_toRightOf="@id/txt_alamat"
                                    android:id="@+id/alamat"
                                    android:layout_below="@id/ttl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat" />
                                <TextView
                                    android:textStyle="bold"
                                    android:id="@+id/txt_kelas"
                                    android:layout_below="@id/alamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kelas : " />

                                <TextView
                                    android:layout_toRightOf="@id/txt_kelas"
                                    android:id="@+id/kelas"
                                    android:layout_below="@id/alamat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kelas" />
                                <Button
                                    android:id="@+id/daftar"
                                    android:background="@drawable/bg_input"
                                    android:textAllCaps="false"
                                    android:text="Daftar"
                                    android:layout_below="@id/kelas"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true" />

                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/whiteTextColor"
                    android:layout_weight="3"/>

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteTextColor"
                    android:text="SDN BADEAN 01 BONDOWOSO"
                    android:layout_weight="6"
                    android:textSize="12sp"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/whiteTextColor"
                    android:layout_weight="3"/>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>
    <View
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_bg"/>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_img"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:onClick="onLoginClick"
        android:adjustViewBounds="false"/>
</RelativeLayout>