<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_reminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:gravity="center|left"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/judul_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:layout_below="@+id/gambar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:text="BHS INDONESIA"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:layout_below="@+id/judul_reminder"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:text="11-02-2020"
            android:textStyle="italic"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/nama_rombel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:layout_below="@+id/judul_reminder"
            android:layout_toRightOf="@+id/tanggal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:text="1 A"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/description_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#262626"
            android:layout_below="@+id/tanggal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:text="Mohammad Febri"
            android:textStyle="bold"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:src="@drawable/gku" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>